<!DOCTYPE html>
<html>
  <head>
    <title>InstaTonne</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- Responsive navbar-->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="#">Insta Tonne</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" href="#">Home</a></li>
                            <li class="nav-item"><a class="nav-link" href="#">Recent</a></li>
                        <li class="nav-item"><a class="btn btn-primary nav-link" href="#">Upload</a></li>
                     
                    </ul>
                      <ul class="navbar-nav">
          <li class="nav-item">
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to current_user.full_name, profile_path(current_user.username), class: 'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to "Log Out", destroy_user_session_path, class: 'nav-link', method: :delete %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "Sign In", new_user_session_path, class: 'btn btn-link nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to "Create an Account", new_user_registration_path, class: 'btn btn-success nav-link' %>
              </li>
            <% end %>
          </li>
        </ul>
     
         
                </div>
            </div>
        </nav>
        <!-- Page content-->
        <div class="container">
        <div class="text-center mt-2">
        <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>
       <%= yield %> 
       </div>
       </div>
  </body>
</html>
